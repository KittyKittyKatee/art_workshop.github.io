.news
    &__wrap
        padding-top 138px
    &__title
        margin-top 40px
    &__titles
        margin-left 100px
    &__elem
        display flex
        justify-content flex-end

        position relative

        width 48%
        &:nth-child(odd)
            margin-right 20px
            margin-top 33%
            .news__img
                top -100px
        &:last-child
            margin-top -13%
    &__elems
        display flex
        flex-wrap wrap

        margin-top -150px
    &__news-title
        margin 0 0 32px

        font 300 28px/28px 'Roboto Condensed', sans-serif
        color black
    &__img
        position absolute
        left 0
        top -20px
        z-index 1
    &__content
        display flex
        flex-direction column
        position relative
        z-index 2

        width 435px
        max-width 100%
        height 450px
       
        padding 50px 35px
        box-sizing border-box
        
        background-color light-gray       
    &__btn
        button(black)

        width 177px
        min-width 177px
        height 46px

        margin-top 50px
        padding 0
        box-sizing border-box        
    &__more
        display flex
        align-items center
        justify-content center

        width 470px
        height 280px

        font 500 12px/12px 'Lato', sans-serif
        border 2px solid black
        box-shadow none
        outline none
        
        text-transform uppercase
        letter-spacing 3px

        margin-right 110px
        margin-top 120px

        background white
        appearance none
        cursor pointer