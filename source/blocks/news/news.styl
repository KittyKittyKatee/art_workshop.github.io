.news
    &__wrap
        padding-top 138px
    &__title
        margin-top 40px
    &__titles
        margin-left 100px
        @media (max-width 660px)
             margin-left 20px
    &__elem
        display flex
        justify-content flex-end

        position relative

        width 48.8%
        @media (max-width 660px)
            width 100%
        &:nth-child(odd)
            margin-right 0
            margin-left auto
            .news__img
                top -100px
            @media (max-width 660px)
                margin 0
                margin-bottom 100px
        &:nth-child(2)
            margin-top -150px
            @media (max-width 660px)
                margin 0
                margin-bottom 260px
        &:nth-child(3)
            margin-top -80px
            @media (max-width 660px)
                margin 0
                margin-bottom 100px
        &:last-child
            margin-top -13%
            @media (max-width 660px)
                margin 0
                margin-bottom 100px
    &__elems
        display flex
        flex-direction column

        margin-top -150px
        @media (max-width 660px)
            margin-top 150px
    &__news-title
        margin 0 0 32px

        font 300 28px/28px 'Roboto Condensed', sans-serif
        color black
        @media (max-width 1100px)
            font-size 22px
        @media (max-width 900px)
            margin-bottom 10px
        @media (max-width 660px)
            font-size 28px
            margin-bottom 32px
    &__text
        @media (max-width 1100px)
            font-size 12px
        @media (max-width 660px)
            font-size 16px
    &__img
        position absolute
        left 0
        top -20px
        z-index 1
    &__content
        display flex
        flex-direction column
        position relative
        z-index 2

        width 435px
        max-width 100%
        height 450px
       
        padding 50px 35px
        box-sizing border-box
        
        background-color light-gray      
        @media (max-width 1100px)
            width 40vw
        @media (max-width 660px)
            width 435px
        @media (max-width 450px)
            height auto

            padding 30px
    &__btn
        button(black)

        width 177px
        min-width 177px
        height 46px

        margin-top 50px
        padding 0
        box-sizing border-box
        @media (max-width 900px)
            margin-top 20px
        @media (max-width 660px)
            margin-top 50px
    &__more
        display flex
        align-items center
        justify-content center

        width 470px
        height 280px

        margin-top -170px
        
        border 2px solid black
        box-shadow none
        outline none
        
        font 500 12px/12px 'Lato', sans-serif
        text-transform uppercase
        letter-spacing 3px

        background white
        appearance none
        cursor pointer
        @media (max-width 1100px)
            width 43vw
        @media (max-width 660px)
            margin 0
            margin-bottom 100px
        @media (max-width 660px)
            width 100%
            height 100px