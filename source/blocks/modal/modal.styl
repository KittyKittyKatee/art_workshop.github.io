.modal
    position fixed
    z-index 1000
    display none
    justify-content center

    width 100vw
    height auto
    &__form
        margin 0
        width 100%
        >button
            max-width 360px
            width 100%
            margin-left auto
            margin-right auto
            background-color yellow
            color black
            &:hover
                color white
    input 
        background-color light-gray
        max-width 360px
        width 100%
        margin-left auto
        margin-right auto
    &__bg
        position fixed
        z-index 1000
        top 0

        width 100vw
        height 100vh

        background black
        opacity 0.8
    &__wrap
        position relative
        z-index 1001

        width 670px
        height auto

        padding 75px 82px 38px
        box-sizing border-box
        margin 50px auto

        color black

        background-color white
        @media(max-width 730px)
            position fixed
            z-index 1001
            top 0

            width 100vw
            height 100vh
            overflow-y scroll

            margin 0
            padding 60px 50px 60px
        @media(max-width 440px)
            padding 60px 30px 60px
    &__title
        margin-bottom 20px

        font 400 48px/48px 'Roboto Condensed', sans-serif
        text-align center
        @media(max-width 440px)
            font-size 32px
    &__text
        margin-bottom 60px

        font 300 18px/24px 'Lato', sans-serif
        color dark-gray
        text-align center
        @media(max-width 440px)
            font-size 18px
            margin-bottom 40px
    &__btn
        button(red)
        margin 35px auto 0
        width 100%
        min-width 100%
    &__agree
        font 12px/15px "Cera Pro Regular", sans-serif

        margin 30px auto 0
    &__close
        position absolute
        right 25px
        top 30px

        box-shadow none
        border none
        outline none

        background-color transparent
        cursor pointer
        svg
            width 20px
            height 20px

.agree
    display flex
    justify-content space-between
    span
        width 95%
        color very-light-gray
        font 300 12px/1 Lato, sans-serif
        letter-spacing 0.5px
    &__checkbox
        position relative
        display inline-block
        width 14px
        height 14px
        margin-right 8px
        border-radius 2px
        border 1px solid checkbox
        cursor pointer
        input
            opacity 0
            margin 0
            width 14px
            height 14px
            z-index 10
            position absolute
            cursor pointer
        input:checked ~ .agree__fake-checkbox
            opacity 1
    &__fake-checkbox
        position absolute
        background url('../../assets/images/check.png') center center no-repeat
        width 14px
        height 14px
        opacity 0
        transition all 0.3s

@keyframes shake {
  0% {
    transform: translateX(-12px);
  }
  10% {
    transform: translateX(9px);
  }
  20% {
    transform: translateX(-11px);
  }
  30% {
    transform: translateX(11px);
  }
  40% {
    transform: translateX(9px);
  }
  50% {
    transform: translateX(-8px);
  }
  60% {
     transform: translateX(9px);
  }
  70% {
    transform: translateX(-6px);
  }
  80% {
     transform: translateX(8px);
  }
  90% {
    transform: translateX(-5px);
  }
  100% {
    transform: translateX(3px);
  }
}

@keyframes fade-in 
  0% {
    opacity 0
    transform scale(0.4) translateY(-400px)
  }
  
  100% {
    opacity 1
    transform scale(1)
  }

@keyframes fade-out
  0% {
    opacity 1
    transform scale(1)
  }
  
  100% {
    opacity 0
    transform scale(0.4) translateY(-400px)
  }