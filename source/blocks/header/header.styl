.header
    position absolute
    top 20px
    left 0
    z-index 100

    width 100%
    &__wrap
        display flex
        justify-content space-between

        width 100%
    &__right
        display flex
    &__logo
        width 57px
        height 58px
        img
            width 57px
            height 58px
    &__menu
        display: flex
        
        list-style: none
        
        margin-right 6.8em
    &__main
        display flex
        align-items center

        height 175px

        margin-right 60px
    &__elem
        margin-right 50px
        &:last-child 
            margin-right 0
    &__link
        text-decoration none
        font 20px/24px 'Cera Pro Bold', sans-serif;
        color white

        transition all 0.3s ease-in-out
        &:hover, &:active
            color red
            transform translate(-2px, 2px)
    &__call
        display flex
        flex-direction column
        align-items flex-end
        @media(max-width 620px)
            display none
    &__phone
        margin-bottom 8px

        text-decoration none
        font 300 20px/26px 'Lato', sans-serif
        letter-spacing 1px
        color white
        
        cursor pointer
        transition all 0.2s
        &:hover
            color yellow
    &__button-call
        position relative

        text-decoration none
        font 500 12px/16px 'Lato', sans-serif
        letter-spacing 0.5px
        text-transform uppercase
        color white

        cursor pointer
        transition all 0.2s
        &:hover
            color yellow
        &::before
            content ""
            position absolute
            top 7px
            left -44px

            width 30px
            height 1px

            background yellow
    &__burger-place
        display none

        width 60px
        height 50px

        margin-left 70px
        @media(max-width 1654px)
            display block
    &__burger 
        flex-direction column
        justify-content space-between
        display none
        position fixed
        top 20px
        left 80vw
        z-index 20000
        
        margin-left 50px
        margin-top 10px

        cursor pointer
        @media(max-width 1654px)
            display flex
        @media(max-width 620px)
            left 65vw
            top 30px
        span
            width 50px
            height 4px

            margin-bottom 12px

            background-color yellow
            transition all 0.3s ease-in-out
        &:hover
            span
                background-color white
        &.close
            span
                &:nth-child(1)
                    transform rotate(45deg) translate(12px, 11px)
                &:nth-child(2)
                    transform rotate(-45deg)
                &:nth-child(3)
                    transform rotate(45deg) translate(-12px, -11px)
                    opacity 0
        
    &__button
        margin-right 30px
