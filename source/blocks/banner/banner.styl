.banner
    background fixed url(../../assets/images/heading-bg.jpg) no-repeat
    &__wrap
        position relative

        padding 13% 0 13%
    &__content
        display flex
        flex-direction column
        align-items center
    &__title
        margin-bottom 22px

        font 300 64px/100px 'Roboto Condensed', sans-serif
        color white
        text-align center
        span 
            font-size 86px
            text-transform uppercase
    &__text
        margin-bottom 88px

        font 300 24px/1 'Lato', sans-serif
        color white
    &__btn
        button(yellow)
    &__menu
        position absolute
        bottom 0

.menu
    display flex
    justify-content space-between
    align-items center

    width 100%
    &__elems
        display flex
        
        margin 0
        margin-bottom 30px

        list-style none
    &__elem
        margin-right 80px
        &:last-child
            margin-right 20px
    &__btn
        margin-bottom 20px
    &__link
        font 300 14px/18px 'Lato', sans-serif
        text-transform uppercase
        text-decoration none
        color white
        
        transition all 0.2s
        &:hover
            color yellow