mixin ideas()
    section.ideas
        .ideas__wrap.wrap
            .ideas__title.title-2 <b> от идеи </b> <br> до воплощения
            .ideas__slider.slider
                .slider__arrow
                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" class="svg-icon icon-arrow icon-arrow-left" viewBox="0 0 50 50">
                        <g>
                            <rect data-name="Прямоугольник 39" class="cls-1" width="50" height="50"></rect>
                            <path data-name="Фигура 18" class="cls-2" d="M417.7,6366.9l-8,7.54,8,7.66" transform="translate(-395 -6349)"></path>
                            <path data-name="Фигура 17" class="cls-2" d="M431.3,6374.9H409.7" transform="translate(-395 -6349)"></path>
                        </g>
                    </svg>
                .slider__content
                    .slider__body
                        .slider__slide
                            img(src="../assets/images/ideas-1.jpg")
                    .slider__count <b> 5 </b>  /  <span> 10 </span>
                .slider__arrow
                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" class="svg-icon icon-arrow icon-arrow-right" viewBox="0 0 50 50">
                        <style>.cls-1, .cls-2 { fill: none; stroke: #1b2024; }.cls-1 { stroke-width: 2px; } .cls-2 { stroke-width: 1px; fill-rule: evenodd;}
                        </style>
                        <g>
                            <rect data-name="Прямоугольник 39" class="cls-1" width="50" height="50"></rect>
                            <path data-name="Фигура 18" class="cls-2" d="M1504.3,6381.1l8-7.54-8-7.66" transform="translate(-1477 -6349)"></path>
                            <path data-name="Фигура 17" class="cls-2" d="M1490.7,6373.1h21.6" transform="translate(-1477 -6349)"></path>
                        </g>
                    </svg>