.ideas
    &__wrap
        padding-top 90px
        padding-bottom 70px
    &__title
        margin-bottom 60px
        margin-left 100px
        @media (max-width 980px)
            margin-left 20px
        @media (max-width 900px)
            font-size 38px
            line-height 48px
        @media (max-width 410px)
            font-size 30px
    .slider
        @media (max-width 980px)
            grid-template-columns 1fr
            justify-content center
            &__arrow
                position absolute
                bottom -20px
            &__body
                width 100%
            &__content
                width 100vw
            &__slide
                width 100vw
                img 
                    width 100%
                    object-fit cover
        &__content
            margin 0
        margin 0 20px
.slider
    display grid
    grid-template-columns 1fr 770px 1fr
    align-items center
    position relative
    &__arrow
        transition all 0.3s ease-in-out
        cursor pointer
        svg
            path, rect
                transition all 0.3s ease-in-out
        &:hover
            svg 
                path
                    stroke yellow
                rect
                    stroke yellow
        &:first-child
            &:hover
                transform translateX(-4%)
        &:last-child
            justify-self flex-end
            display flexbox
            &:hover
                transform translateX(14%)
    &__body
        display flex
    &__content
        display flex
        flex-direction column
        align-items center

        margin 0 20px
    &__counter
        display flex
        justify-content center

        margin-top 20px
        
        font 200 18px/24px 'Lato', sans-serif
        b
            font-weight 700
