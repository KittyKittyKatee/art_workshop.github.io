.ideas
    &__wrap
        padding-top 90px
        padding-bottom 70px
    &__title
        margin-bottom 60px
        margin-left 100px
.slider
    display grid
    grid-template-columns 1fr 760px 1fr
    align-items center
    &__arrow
        margin-right 20px

        transition all 0.3s ease-in-out
        cursor pointer
        svg
            path, rect
                transition all 0.3s ease-in-out
        &:hover
            svg 
                path
                    stroke yellow
                rect
                    stroke yellow
        &:first-child
            &:hover
                transform translateX(-4%)
        &:last-child
            justify-self flex-end
            display flex
            
            margin-right 0
            margin-right -20px
            &:hover
                transform translateX(14%)
    &__content
        display flex
        flex-direction column
        align-items center
    &__count
        display flex
        justify-content center

        margin-top 20px
        
        font 200 18px/24px 'Lato', sans-serif
        b
            font-weight 700
