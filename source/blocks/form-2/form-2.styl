.form-2
    background fixed url(../../assets/images/workshop-bg.jpg) no-repeat 50% 50%
    background-size cover
    &__wrap
        position relative
        
        padding-top 90px
        padding-bottom 40px
    &__form
        display grid
        grid-template-columns 300px 300px
        grid-gap 22px
        width fit-content
        @media (max-width 950px)
            grid-template-columns 300px
            grid-gap 0px
    &__content
        display flex
        flex-direction column
        align-items center
    &__subtitle
        font 300 64px/96px 'Roboto Condensed', sans-serif
        color white
        text-align center
        @media (max-width 1100px)
            font-size 50px
            line-height 50px
            margin-top 30px
        @media (max-width 520px)
            font-size 36px
            line-height 40px
    &__title
        margin-bottom 72px

        font 400 84px/86px 'Roboto Condensed', sans-serif
        color white
        text-align center
        text-transform uppercase
        @media (max-width 1100px)
            display block
            font-size 64px
        @media (max-width 700px)
            line-height 70px
            margin-top 20px
        @media (max-width 520px)
            font-size 48px
            line-height 60px
    &__text
        margin-bottom 88px

        font 300 24px/1 'Lato', sans-serif
        color white
        text-align center
    &__btn
        button(yellow)

        min-width 270px
    &__agree
        display flex

        max-width 500px

        margin 30px auto 0

        font 300 12px/12px 'Lato', sans-serif
        letter-spacing 0.5px
        color white
        p
            width 90%
    &__checkbox
        display flex
        position relative

        width 14px
        height 14px

        margin-right 10px
        border 1px solid #cac0b3
        border-radius: 2px
        box-sizing border-box

        background transparent
        transition all 0.2s
        &:hover
            border 1px solid yellow

            background url(../../assets/images/check.png) no-repeat 50% 50%
        input
            position absolute

            width 14px
            height 14px

            margin 0

            visibility hidden