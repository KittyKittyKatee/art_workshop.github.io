.contacts
    &__wrap
        padding-top 30px
        padding-bottom 100px
        position relative
        max-width 1040px
    &__content
        position relative
        z-index 10
        width 100%
        max-width 470px
        height 500px
        background-color light-gray
        padding 65px 50px 40px
        box-sizing border-box
        display flex
        flex-direction column
        justify-content space-between
    &__adress
        adress
            font 400 16px/24px 'Lato', sans-serif
    &__subtitle
        margin-bottom 25px
        font 700 30px/36px 'Roboto Condensed', sans-serif
        color black
    &__title
        b
            font-weight 500
    &__map
        position absolute
        top 100px
        right 0
        z-index 0
        background-color yellow
        width 80%
        height 500px