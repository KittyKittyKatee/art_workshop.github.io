.contacts
    &__wrap
        max-width 970px

        padding-top 220px
    &__top
        display flex
        justify-content space-between
        position relative
        &::before
            position absolute
            top -60px
            left  -92px
            z-index -1
            content ""
            
            width 860px
            height 400px
            
            background-color light-gray
    &__content
        position relative
        z-index 10
    &__subtitle
        margin-top 5px
    &__title
        margin-top 70px
        b
            font-weight 500
    &__img
        display flex
        flex-direction column
        span 
            margin-top 7px

            font 300 16px/30px 'Lato', sans-serif
            letter-spacing 0.8px
            color gray-text
    &__name
            margin-bottom 28px

            font 700 28px/36px 'Roboto Condensed', sans-serif
            color black
    &__text
        display grid
        grid-template-columns 1fr 1fr
        grid-gap 40px
    &__mid
        padding-top 100px
        padding-bottom 70px
    &__bottom
        display flex
        justify-content space-between
        position relative
        &::before
            content ""
            position absolute
            top 14%
            right -20px
            z-index -1
            
            width 860px
            height 370px

            background-color light-gray
        .about__title
            max-width 450px
            
            margin 40px 0 0
    &__btn
        button(black)
        
        margin-top 75px
    &__img-book
        margin-left -100px