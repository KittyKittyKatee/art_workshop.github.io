  padding: 0 padding
  box-sizing: border-box
  margin: 0 auto


title-1(color)
  font-family: "Raleway", Helvetica, sans-serif
  font-weight: 400
  line-height: 42px
  font-size: 36px
  text-transform: uppercase
  color: color

title-2(color)
  font-family: "Open Sans", Helvetica, sans-serif
  font-weight: 800
  font-size: 20px
  color: color

text(color)
  font-family: "Open Sans", Helvetica, sans-serif
  font-weight: 400
  font-size: 14px
  color: color

button(color)
  font 500 12px/16px 'Lato', sans-serif
  letter-spacing 2px
  text-transform uppercase
  background-color transparent
  height 50px
  color color
  padding 15px 32px
  min-width 280px
  border 2px solid color
  box-sizing border-box
  cursor pointer
  text-align center
  display block
  box-shadow none
  appearance none
  transition all 0.2s
  outline none
  position relative
  overflow hidden
  span
    background-color yellow 
    width 100%
    height 100%
    position absolute
    z-index -1
    top -100%
    left 0

